{
  "compilerOptions": {
    "allowJs": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "isolatedModules": false,
    "jsx": "react-native",
    "lib": [
      "es6",
      "es2017",
      "dom"
    ],
    "moduleResolution": "node",
    "strict": true,
    "target": "esnext",
    "skipLibCheck": true,
    "declaration": true,
    "removeComments": true,
    "outDir": "./dist"
  },
  "include": [
    "src/**/*"
  ]
}
